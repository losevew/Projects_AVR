// Timer 0 overflow interrupt service routine
interrupt [TIM0_OVF] void timer0_ovf_isr(void)
{
	TCNT0=0xB0;
// Place your code here
    if (counter == 99) { 
        counter = 0;
        PWM_step++;
        if (PWM_step == 40) {
           PWM_step = 0;
           R++;
           G++;
           B++;
           if (R == 95) {
             R = 0;
             }
           if (G == 95) {
             G = 0;
             } 
           if (B == 95) {
             B = 0;
             }     
        }
    }
    else  { 
        counter++ ;  
    };
    

}

